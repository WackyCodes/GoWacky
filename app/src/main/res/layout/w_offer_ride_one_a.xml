<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/wLinearLayForOfferRide"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/wRelativeLayForBike"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/wColorB_LightWhite"
            android:background="@drawable/back_border_1dp_10dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text2"
                android:src="@drawable/icgo_motorcycle_24dp"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Bike"
                android:textColor="@color/wColorDark_2"
                android:textSize="20dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wRelativeLayForCar"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/wColorB_LightWhite"
            android:background="@drawable/back_border_1dp_10dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text3"
                android:src="@drawable/icgo_car_24dp"/>

            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Car"
                android:textColor="@color/wColorDark_2"
                android:textSize="20dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wRelativeLayForVehicleNo"
            android:layout_width="200dp"
            android:layout_height="93dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/wColorB_LightWhite"
            android:background="@drawable/back_border_1dp_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/text5"
                android:gravity="center_vertical">

                <Spinner
                    android:id="@+id/spacer1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    android:backgroundTint="@color/wColorDark_2"
                    android:padding="2dp" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    android:hint="01"
                    android:maxLines="1"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textColor="@color/wColorDark_2"
                    android:backgroundTint="@color/wColorDark_2"
                    android:padding="2dp"
                    android:textAlignment="center" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    android:hint="DT"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:maxLength="3"
                    android:textColor="@color/wColorDark_2"
                    android:backgroundTint="@color/wColorDark_2"
                    android:padding="2dp"
                    android:textAlignment="center" />

                <EditText
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_margin="2dp"
                    android:hint="0110"
                    android:padding="2dp"
                    android:maxLines="1"
                    android:maxLength="4"
                    android:inputType="number"
                    android:textColor="@color/wColorDark_2"
                    android:backgroundTint="@color/wColorDark_2"
                    android:textAlignment="center" />

            </LinearLayout>

            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Enter Vehicle No."
                android:textColor="@color/wColorDark_2"
                android:textSize="20dp" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/wRelativeLayForMiniTruck"
            android:layout_width="100dp"
            android:layout_height="93dp"
            android:layout_margin="2dp"
            android:backgroundTint="@color/wColorB_LightWhite"
            android:background="@drawable/back_border_1dp_10dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text4"
                android:backgroundTint="@color/wColorC_LightOrange"
                android:src="@drawable/icgo_mini_truck_24dp"/>

            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Mini Truck"
                android:textColor="@color/wColorDark_2"
                android:textSize="20dp" />


        </RelativeLayout>
    </LinearLayout>

</HorizontalScrollView>