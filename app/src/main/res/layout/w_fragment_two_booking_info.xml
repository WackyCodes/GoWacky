<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".adaptor_model_fragment.W_FragmentTwoBookingInfoClass">

    <!--  For Offer Ride   -->
    <RelativeLayout
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <Button
            android:id="@+id/wSampleLinearLayout4121"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/back_border_05dp_30dp_btn_color_primary"
            android:text="Booking Information"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:translationZ="3dp"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/colorBlack" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_border_05dp_10dp_btn_color_primary"
            android:elevation="4dp"
            android:gravity="center">

            <!--        This Frame For Offer Ride   -->
            <!--   Framer layout height and width
            android:layout_width="80dp"
            android:layout_height="60dp"-->

            <!--        This Frame for Request Ride     -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/wSampleRelativeLayout4122"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:elevation="3dp"
                android:translationZ="3dp">

                <RelativeLayout
                    android:id="@+id/wRelativeLayForBike"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/back_border_1dp_10dp"
                    android:backgroundTint="@color/wColorB_LightWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/text2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/icgo_motorcycle_24dp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="Bike"
                        android:textColor="@color/wColorDark_2"
                        android:textSize="16dp" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/relativeLayout3"
                    app:layout_constraintStart_toEndOf="@+id/wRelativeLayForBike"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icgo_user_24dp"
                        android:drawablePadding="4dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="Bahadur Singh"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/icgo_vehicle_nu_24dp"
                        android:drawablePadding="4dp"
                        android:paddingLeft="4dp"
                        android:text="MP15 YU 2098"
                        android:textColor="@color/colorAccent"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/icgo_call_24dp"
                            android:drawablePadding="4dp"
                            android:paddingLeft="4dp"
                            android:text="+91789823468"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:textAllCaps="true"
                            android:padding="2dp"
                            android:textColor="@color/colorGreen"
                            android:text="call" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/back_border_1dp_10dp"
                    android:backgroundTint="@color/wColorB_LightWhite"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                    <RelativeLayout
                        android:id="@+id/wOTPTextViewRelativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/wBookingTextAndOTP"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="OTP"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/wBookingTextAndOTP"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:text="2312"
                            android:textColor="@color/color_icgo"
                            android:textAlignment="center"
                            android:textSize="20dp"
                            android:visibility="visible"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/wFinalBookingMessage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="2dp"
                        android:textAlignment="center"
                        android:text="Booked Your Ride"
                        android:textSize="16dp"
                        android:visibility="gone"/>

                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/wFrameForOfferRide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/back_border_05dp_10dp"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:padding="4dp"
            android:elevation="4dp"
            android:translationZ="5dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/wPassengerInfoRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="4dp"
                android:elevation="4dp"
                android:translationZ="5dp"/>

        </ScrollView>

    </FrameLayout>


</FrameLayout>