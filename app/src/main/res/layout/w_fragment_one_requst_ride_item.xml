<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

<!--

            android:layout_width="80dp"
            android:layout_height="60dp"
            padding = 2dp
 -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wRequestRideAvailableVehicleItem_ConstLayout"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_margin="2dp"
        android:background="@drawable/back_border_05dp_10dp"
        android:backgroundTint="@color/wColorB_LightWhite"
        android:padding="1.5dp">

        <TextView
            android:id="@+id/wVehicleType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="@+id/wVehicleImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/wVehicleImage"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wAvailableSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2 "
                    android:paddingRight="2dp"
                    android:textColor="#1B9602"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textView7oo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="bottom"
                    android:text="Seats"
                    android:textColor="#1B9602"
                    android:textSize="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Available"
                android:textColor="#1B9602"
                android:textSize="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/wVehicleReachTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:paddingRight="2dp"
                    android:textSize="14dp"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1dp"
                    android:text="min"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/wVehicleImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icgo_car_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wVehicleType" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>