<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".W_Fragment.W_FragmentOneReqOffRide">

<!--  For Offer Ride   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:translationZ="5dp"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/wRequestRideBtn"
                android:layout_width="130dp"
                android:background="@drawable/back_border_1dp_30dp_btn_color_1"
                android:layout_height="match_parent"
                android:textColor="@color/colorWhite"
                android:text="Requst Ride"/>

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/wOfferRideBtn"
                android:layout_height="match_parent"
                android:layout_width="130dp"
                android:textColor="@color/colorWhite"
                android:backgroundTint="@color/colorAccent"
                android:background="@drawable/back_border_1dp_30dp_btn_color_1"
                android:text="Offer Ride" />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:background="@drawable/back_border_1dp_20dp_btn_color_1"
            android:elevation="4dp"
            android:translationZ="4dp">

            <!--        This Frame For Offer Ride   -->
        <!--   Framer layout height and width
            android:layout_width="80dp"
            android:layout_height="60dp"-->

            <FrameLayout
                android:id="@+id/wFrameForOfferRide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="visible">

                <include layout="@layout/w_offer_ride_one_a"/>

            </FrameLayout>
            <!--        This Frame for Request Ride     -->
            <FrameLayout
                android:id="@+id/wFrameForRequestRide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="16dp"
                    android:id="@+id/wRequestRideRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>


        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>