<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.users.Go_LoginActivity">


<!-- Option For User Login -->
    <FrameLayout
        android:visibility="gone"
        android:id="@+id/wUserLogInFrame12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/wUserLoginWithPhoneOptionBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/back_border_05dp_10dp"
                android:backgroundTint="@color/colorGreen"
                android:text="LogIn With Phone and OTP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/wUserLoginWithEMailOptionBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="LogIn with Email and Password"
                app:layout_constraintEnd_toEndOf="@+id/wUserLoginWithPhoneOptionBtn"
                app:layout_constraintHorizontal_bias="0.0"
                android:background="@drawable/back_border_05dp_10dp"
                android:backgroundTint="@color/colorGreen"
                app:layout_constraintStart_toStartOf="@+id/wUserLoginWithPhoneOptionBtn"
                app:layout_constraintTop_toBottomOf="@+id/wUserLoginWithPhoneOptionBtn" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
<!--    User Login With Email password -->
    <FrameLayout
        android:visibility="visible"
        android:id="@+id/wUserLogInFrame11"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/wUserEmailEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="100dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Enter Email"
                android:maxLines="1"
                android:singleLine="true"
                android:drawablePadding="4dp"
                android:paddingLeft="4dp"
                android:drawableLeft="@drawable/icgo_user_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/wUserPassEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Enter Password"
                android:ems="10"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:drawableLeft="@drawable/icgo_user_24dp"
                android:drawablePadding="4dp"
                android:paddingLeft="4dp"
                app:layout_constraintEnd_toEndOf="@+id/wUserEmailEditText"
                app:layout_constraintStart_toStartOf="@+id/wUserEmailEditText"
                app:layout_constraintTop_toBottomOf="@+id/wUserEmailEditText" />

            <Button
                android:id="@+id/wUserLoginWithEmailBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Button"
                android:background="@drawable/back_border_0dp_10dp"
                android:backgroundTint="@color/colorGreen"
                app:layout_constraintEnd_toEndOf="@+id/wUserPassEditText"
                app:layout_constraintStart_toStartOf="@+id/wUserPassEditText"
                app:layout_constraintTop_toBottomOf="@+id/wUserPassEditText" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
<!--    User Login With Phone and OTP -->
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/wUserPhoneEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:ems="10"
                android:hint="Enter Phone"
                android:drawableLeft="@drawable/icgo_call_24dp"
                android:paddingLeft="4dp"
                android:drawablePadding="4dp"
                android:singleLine="true"
                android:maxLines="1"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/wUserPinEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter OTP"
                android:drawableLeft="@drawable/icgo_call_24dp"
                android:paddingLeft="4dp"
                android:drawablePadding="4dp"
                android:maxLength="4"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="numberPassword"
                app:layout_constraintEnd_toEndOf="@+id/wUserPhoneEditText"
                app:layout_constraintStart_toStartOf="@+id/wUserPhoneEditText"
                app:layout_constraintTop_toBottomOf="@+id/wUserPhoneEditText" />

            <Button
                android:id="@+id/wUserLoginWithPhoneBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Button"
                android:background="@drawable/back_border_0dp_10dp"
                android:backgroundTint="@color/colorGreen"
                app:layout_constraintEnd_toEndOf="@+id/wUserPinEditText"
                app:layout_constraintStart_toStartOf="@+id/wUserPinEditText"
                app:layout_constraintTop_toBottomOf="@+id/wUserPinEditText" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>